@model WebApplication1.Models.teacher_salary
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", null, FormMethod.Post))
 {
<div class="form-horizontal">
    <div class="form-group">
        <label>Teacher Name</label>
        @Html.DropDownList("teacherList", null, "Select", htmlAttributes: new { @Name = "tid" })
    </div>
    <div class="form-group">
        <label>Salary Paid</label>
        <input type="text" name="salary_paid" class="form_control" />
    </div>
    <div class="form-group">
        <label>Paid Date</label>
        <input type="date" name="paid_date" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</div>
 }

