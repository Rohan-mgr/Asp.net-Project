
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
   .details__div {
       display: flex; 
       flex-direction: column;
       justify-content: center;
   }
   .btn {
       width: 10%;
       margin-top: 10px;
   }
</style>
<h2>Details</h2>
<form action="SaveData">
    <div class="details__div">
    <label>Name: </label>
    <input type="text" name="sname" autocomplete="off"/>
    <label>Address: </label>
    <input type="text" name="saddress" autocomplete="off"/>
    <label>Contact: </label>
    <input type="text" name="contacts" />
    <button type="submit" class="btn btn-success" value="Save">Submit</button>
    </div>
</form>