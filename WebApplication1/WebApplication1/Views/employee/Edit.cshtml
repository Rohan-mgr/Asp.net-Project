
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .details__div {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .btn {
        width: 10%;
        margin-top: 10px;
    }
</style>
<h2>Edit</h2>

@using(Html.BeginForm("UpdateData", "employee"))
{
<div class="details__div">
    <input type="hidden" name="eid" value="@Model.eid" />
    <label>Name: </label>
    <input type="text" name="ename" autocomplete="off" />
    <label>Address: </label>
    <input type="text" name="eaddress" autocomplete="off" />
    <label>Contact: </label>
    <input type="text" name="contacts" />
    <button type="submit" class="btn btn-success" value="Save">Submit</button>
</div>
}
    
