@model WebApplication1.Models.teacher
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .details__div {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .btn {
        width: 10%;
        margin-top: 10px;
    }
</style>
<h2>Edit</h2>

@using (Html.BeginForm("UpdateData", "teacher"))
{
    <div class="details__div">
        <input type="hidden" name="tid" value="@Model.tid" />
        <label>Name: </label>
        <input type="text" name="tname" value="@Model.tname" autocomplete="off" />
        <label>Address: </label>
        <input type="text" name="taddress" value="@Model.taddress" autocomplete="off" />
        <label>Contact: </label>
        <input type="text" name="contacts" value="@Model.contacts"/>
        <button type="submit" class="btn btn-success" value="Save">Submit</button>
    </div>
}

